<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.cronscheduler.job.grid.container">
            <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.indexer.grid" as="grid">
                <arguments>
                    <argument name="use_ajax" xsi:type="string">0</argument>
                    <argument name="pager_visibility" xsi:type="string">0</argument>
                    <argument name="id" xsi:type="string">gridConfiguredJbos</argument>
                    <argument name="dataSource" xsi:type="object">Sandipan\CronScheduler\Model\Job\ResourceModel\Grid\Collection</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.indexer.grid.columnSet">
                    <arguments>
                        <argument name="id" xsi:type="string">configuredjob_grid</argument>
                        <argument name="filter_visibility" xsi:type="string">0</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Job Code</argument>
                            <argument name="index" xsi:type="string">name</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="column_css_class" xsi:type="string">job-code</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="schedule">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Cron Schedule</argument>
                            <argument name="index" xsi:type="string">schedule</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="column_css_class" xsi:type="string">job-schedule</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="instance">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Method Name</argument>
                            <argument name="renderer" xsi:type="string">Sandipan\CronScheduler\Block\Adminhtml\Job\Grid\Column\Renderer\Method</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="column_css_class" xsi:type="string">job-method</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
